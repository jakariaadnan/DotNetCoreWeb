@model MasterDataViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5>Department Information</h5>
            </div>
            <div class="card-body">
                <div class="general-label">

                    <form role="form" asp-area="MasterData" asp-controller="MasterData" asp-action="Department" method="post">
                        <input class="form-control" type="hidden" id="departmentId" name="departmentId" value="0">

                        <div class="form-group row">
                            <label for="bankName" class="col-md-2 col-sm-12 col-form-label">Department Name(EN)</label>
                            <div class="col-md-10 col-sm-12">
                                <input class="form-control" type="text" id="nameEn" name="nameEn" placeholder="Department Name English" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="bankNameBn" class="col-md-2 col-sm-12 col-form-label">Department Name(BN)</label>
                            <div class="col-md-10 col-sm-12">
                                <input class="form-control" type="text" id="nameBn" name="nameBn" placeholder="Department Name Bangla" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="shortOrder" class="col-md-2 col-sm-12 col-form-label">Short Order</label>
                            <div class="col-md-10 col-sm-12">
                                <input class="form-control" type="number" id="shortOrder" name="shortOrder" placeholder="Short Order" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="shortName" class="col-md-2 col-sm-12 col-form-label"></label>
                            <div class="col-md-10 col-sm-12">
                                <div class="float-right">
                                    <button type="reset" class="btn btn-danger">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header text-primary">
                <h5>Bank Information</h5>
            </div>
            <div class="card-body">
                <table class="table table-responsive-sm table-striped table-bordered" id="tblData">
                    <thead>
                        <tr>
                            <th>Sl NO</th>
                            <th>Department Name(EN)</th>
                            <th>Department Name(BN)</th>
                            <th>Short Order</th>
                            <th class="text-nowrap"></th>
                    </thead>
                    <tbody>
                        @{
                            int sl = 0;
                            @foreach (var data in Model.department.OrderBy(x => x.shortName))
                            {
                                sl = sl + 1;
                                <tr>
                                    <td>@sl</td>
                                    <td>@data.deptName</td>
                                    <td>@data.deptNameBn</td>
                                    <td>@data.shortName</td>

                                    <td class="text-nowrap">
                                        <button type="button" class="tabledit-edit-button btn btn-sm btn-info" onclick="Edit(@data.Id,'@data.deptName','@data.deptNameBn',@data.shortName)" style="float: none; margin: 5px;"><span class="ti-pencil"></span></button>
                                        <button type="button" class="tabledit-delete-button btn btn-sm btn-danger" onclick="Delete(@data.Id)" style="float: none; margin: 5px;"><span class="ti-trash"></span></button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <br />
                <br />
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable();
        });


        function Edit(Id, name, nameBn, status) {
            $("#categoryId").val(Id);
            $("#CategoryName").val(name);
            $("#CategoryNameBn").val(nameBn);
            $("#categoryStatus").val(status).trigger('change');
        }


        function Delete(Id) {
            swal({
                title: 'Are you sure?', text: 'Do you want to delete this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, delete it!'
            }).then(function () {

                $.ajax({
                    url: "/MasterData/MasterData/DeleteDepartment/" + Id,
                    data: { Id: Id },
                    type: 'POST',
                })
                    .done(function (res) {
                        if (res == "success") {
                            swal('', 'Deleted Successfully!', 'success');
                            window.location.reload();
                        }
                        else {
                            swal('', 'Unable To Delete!', 'warning');
                            console.log(res);
                        }
                    })
                    .fail(function () {
                        swal('Cancelled', 'It will not be deleted. Please try again later !!!', 'error');
                    });
            });
        }

    </script>
}

