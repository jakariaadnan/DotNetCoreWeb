
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Init_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-10 offset-1" style="margin-top:50px;">
            <div class="row  no-gutters">
                <div class="col-4">
                    <img src="~/logo/Untitled-1.png" style="width:100%;height:450px;" class="img-fluid" />
                </div>
                <div class="col-8" style="background-color:#040825;">

                    <form action="/" method="post">
                        <div class="col-10 offset-1" style="margin-top:80px;">

                            <div class="form-group row">
                                <label for="" class="col-4 text-light">BP No (User Name)</label>
                                <div class="col-8">
                                    <input type="text" style="background-color:#292E44" class="form-control form-control-sm" name="name" placeholder="BP No (User Name)..." value="" />
                                </div>
                            </div> 
                            
                            <div class="form-group row">
                                <label for="" class="col-4 text-light">Email</label>
                                <div class="col-8">
                                    <input type="text" style="background-color:#292E44" class="form-control form-control-sm" name="name" placeholder="Email..." value="" />
                                </div>
                            </div>
                               <div class="form-group row">
                                <label for="" class="col-4 text-light">Phone</label>
                                <div class="col-8">
                                    <input type="text" style="background-color:#292E44" class="form-control form-control-sm" name="name" placeholder="Phone..." value="" />
                                </div>
                            </div> 
                            
                            <div class="form-group row">
                                <label for="" class="col-4 text-light">Password</label>
                                <div class="col-8">
                                    <input type="text" style="background-color:#292E44" class="form-control form-control-sm" name="name" placeholder="Password..." value="" />
                                </div>
                            </div>
                               <div class="form-group row">
                                   <label for="" class="col-4 text-light">Confirm Password</label>
                                <div class="col-8">
                                    <input type="text" style="background-color:#292E44" class="form-control form-control-sm" name="name" placeholder="Confirm Password..." value="" />
                                </div>
                            </div> 
                            
                            <div class="form-group row">
                                <div class="col-4">

                                </div>
                                <div class="col-8">
                                    <input type="submit" class="btn btn-block" style="border-radius:15px;background-color:#A93370;color:#fff;font-weight:bold" name="name" value="Register" />

                                </div>
                            </div>
                        </div>
                    </form>
                   
                </div>
            </div>
        </div>
    </div>
</div>

