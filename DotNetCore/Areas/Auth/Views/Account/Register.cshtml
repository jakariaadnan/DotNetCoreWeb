@model RegisterViewModel;
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Init_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-10 offset-1" style="margin-top:50px;">
            <div class="row  no-gutters">
                <div class="col-2">
                </div>
                <div class="col-8" style="background-color:#040825;">

                    <form asp-area="Auth" asp-controller="Account" asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col-10 offset-1" style="margin-top:80px;">

                            <div class="form-group row">
                                <label for="" class="col-4 text-light">BP No (User Name)</label>
                                <div class="col-8">
                                    <input type="text" style="background-color:#292E44" class="form-control form-control-sm" name="BPNo" placeholder="BP No (User Name)..." value="" required />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="" class="col-4 text-light">Email</label>
                                <div class="col-8">
                                    <input type="email" style="background-color:#292E44" class="form-control form-control-sm" name="Email" placeholder="Email..." value="" required />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="" class="col-4 text-light">Phone</label>
                                <div class="col-8">
                                    <input type="number" style="background-color:#292E44" class="form-control form-control-sm" name="PhoneNumber" placeholder="Phone..." value="" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="" class="col-4 text-light">Password</label>
                                <div class="col-8">
                                    <input type="text" style="background-color:#292E44" class="form-control form-control-sm" name="name" placeholder="Password..." value="" required />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="" class="col-4 text-light">Confirm Password</label>
                                <div class="col-8">
                                    <input type="text" style="background-color:#292E44" class="form-control form-control-sm" name="Password" placeholder="Confirm Password..." value="" required />
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-4">

                                </div>
                                <div class="col-8">
                                    <input type="submit" class="btn btn-block" style="border-radius:15px;background-color:#A93370;color:#fff;font-weight:bold" name="name" value="Register" />

                                </div>
                            </div>
                        </div>
                    </form>
                   
                </div>
                <div class="col-2"></div>
            </div>
        </div>
    </div>
</div>

